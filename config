gunicorn --bind 0.0.0.0:8000 dashboard.wsgi:application


[Unit]
Description=Gunicorn daemon for Django project
After=network.target

[Service]
User=dj
Group=www-data
WorkingDirectory=/home/dj/ai-evaluator/dashboard
ExecStart=/home/dj/venv/bin/gunicorn --workers 3 --bind unix:/home/dj/ai-evaluator/dashboard/gunicorn.sock dashboard.wsgi:application

[Install]
WantedBy=multi-user.target


